
@{
    ViewData["Title"] = "CommentsData";
}

<h1>CommentsData</h1>


<script src=~/lib/jquery/dist/jquery.min.js></script>

<script>
    $(document).ready(function(){

        $("#btnComments").click(function(){
            $.ajax({
                url:'https://jsonplaceholder.typicode.com/comments',
                method:'GET',
                contentType:'application/json',
                success:function(resultData){
                    //alert('Success');
                    console.log(resultData);
                },
                error:function(err){
                    alert('Something went wrong');
                }
            })
        })

        $("#btnUsers").click(function(){
            $.ajax({
                url:'https://jsonplaceholder.typicode.com/users',
                method:'GET',
                contentType:'application/json',
                success:function(resultData){
                    //alert('Success');
                    console.log(resultData);
                },
                error:function(err){
                    alert('Something went wrong');
                }
            })
        })

        
        $("#btnPhotos").click(function(){
            $.ajax({
                url:'https://jsonplaceholder.typicode.com/photos',
                method:'GET',
                contentType:'application/json',
                success:function(resultData){
                                console.log(resultData);
                    for(var i=0;i<resultData.length;i++)
                    {
                        console.log(resultData[i].title);
                        $("#tblPhotos").append(
                            "<tr><td>" + resultData[i].albumId + "</td>" +
                                                "<td>" + resultData[i].title + "</td>" +
                                                "<td><img src=" + resultData[i].thumbnailUrl + "/></td></tr>"                        
                        )
                    }

                },
                error:function(err){
                    alert('Something went wrong');
                }
            })
        })

        
    })

</script>

<button class="btn btn-primary" id="btnComments"> Get Comments Data</button>
<button class="btn btn-warning" id="btnUsers"> Get Users</button>
<button class="btn btn-danger" id="btnPhotos"> Get Photos </button>


<table class="table table-bordered" id="tblPhotos">

</table>